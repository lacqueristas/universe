#!/usr/bin/env bash

docker-machine create --driver virtualbox --virtualbox-cpu-count 2 --virtualbox-memory 2048 lacqueristas
docker-machine regenerate-certs --force lacqueristas &&
node_modules/.bin/hostile set "`docker-machine ip lacqueristas`" lacqueristas.dev &&
node_modules/.bin/hotel start &&
node_modules/.bin/hotel add "http://`docker-machine ip lacqueristas`:3000" --name origin.lacqueristas &&
node_modules/.bin/hotel add "http://`docker-machine ip lacqueristas`:3001" --name www.lacqueristas &&
bin/nfs lacqueristas
