#!/usr/bin/env bash

bin/create &&
docker-machine regenerate-certs lacqueristas &&
npm install &&
node_modules/.bin/hostile set "`docker-machine ip lacqueristas`" lacqueristas.dev &&
hotel start &&
node_modules/.bin/hotel add "http://`docker-machine ip lacqueristas`:3000" --name origin.lacqueristas --out ./hotel.log &&
node_modules/.bin/hotel add "http://`docker-machine ip lacqueristas`:3001" --name www.lacqueristas --out ./hotel.log &&
bin/build &&
rm -rf origin/tmp/pids/server.pid &&
bin/up &&
sleep 2 &&
bin/origin bin/rake db:create db:migrate db:seed &&
bin/clean &&
bin/restart
